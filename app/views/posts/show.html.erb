<h1>show</h1>
<div class="show">
  <div class="show-user">
  <!--ユーザー情報-->
  </div>

  <div class="show-content">
    <div class="main posts-show">
      <div class="container">
        <div class="posts-show-item">
          <p>
          <!-- @postタイトル -->
          <%= @post.title  %>
        </p>
        <p>
          <%= @post.content  %>
        </p>
        <!-- ここに指定されたHTMLを貼り付けてください -->
        <div class="post-time">
          <!-- @postのcreated_atカラムのデータを表示してください -->
          <%= @post.created_at %>
        </div>
        <div class="post-menus">
        <%= link_to("編集", "/edit/#{@post.id}") %>

        <%= link_to("削除", "/destroy/#{@post.id}",{method: "post"}) %>
      </div>
      </div>
    </div>
  </div>
  <div class="message-form">
  <!--メッセージフォーム-->
  </div>


</div>
