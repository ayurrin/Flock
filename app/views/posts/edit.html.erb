<div class="create">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/update/#{@post.id}") do %>
      <div class="form">
        <div class="form-body">
          <!-- error -->
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="title">
          <p>タイトル</p>
          <textarea name="title"  placeholder="タイトルを入力"><%= @post.title %></textarea>
          </div>

          <div class="content">
          <p>内容</p>
          <textarea name="content" placeholder="内容を入力"><%= @post.content %></textarea>
          </div>
          <div class="check">
          <input type="submit" value="確認">
          </div>


          <div class="form">


        </div>
      </div>
    <% end %>
  </div>
</div>
