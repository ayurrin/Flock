<div class="create">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/update") do %>
      <div class="form">
        <div class="form-body">
          <div class="title">
          <p>タイトル</p>
          <textarea name="title"  placeholder="タイトルを入力"></textarea>
          </div>

          <div class="content">
          <p>内容</p>
          <textarea name="content" placeholder="内容を入力"></textarea>
          </div>
          <div class="check">
          <input type="submit" value="確認">
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
