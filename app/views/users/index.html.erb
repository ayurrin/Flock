<div class="mypage">
  <div class="container2">
    <div class="make-link">
      <h1>Twitterで自分の興味のある<br>イベントを探してみよう！</h1>

      <div class="link">
        <div class="button_wrapper">
          <a href="/create" class="btn message">つくってみる</a>
        </div>


      </div>

      <div class="posts">
        <div class="menu">


          <h2>投稿一覧</h2>


        </div>



        <% @user.posts.each do |post| %>
              <!-- 指定されたコードを貼り付けてください -->
              <div class="posts-index-item">
                <div class="post-left">
                  <img src="<%= "#{post.user.image_url}" %>">
                </div>
                <div class="post-right">
                  <div class="post-user-name">

                  </div>
                  <%= link_to(post.title, "/#{post.id}") %>
                </div>
                <div class="image-post">
                  <%= link_to image_tag("/#{post.id}.png"), "/#{post.id}" %>


                </div>
            </div>
              <% end %>

        </div>
      </div>


    <div class="messages">
      <div class="menu">
        <h2>メッセージ</h2>
      </div>

    </div>

    </div>
    <h1></h1>

  </div>

</div>
