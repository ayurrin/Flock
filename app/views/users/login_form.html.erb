<div class="main posts-index">
  <div class="container">
    <div class="posts-index-item">
      <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <!-- ユーザーの画像が表示されるように、以下のsrcに値を追加してください -->
          <img src="<%= "#{post.user.image_url}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <!-- link_toメソッドを用いて、ユーザー詳細ページへのリンクを作成してください -->
            <%= link_to(post.user.nickname, "/user/#{post.user.id}") %>
          </div>
          <%= link_to(post.title, "/#{post.id}") %>
        </div>
      </div>
    <% end %>
    </div>

  </div>
</div>
